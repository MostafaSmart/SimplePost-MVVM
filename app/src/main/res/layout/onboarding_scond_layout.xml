<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/onboarding_scond_root_layout2"
    android:background="@color/orang_prime"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_img"
        android:id="@+id/imgPhone"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_standard_new"
        android:id="@+id/textMain"
        android:layout_below="@+id/imgPhone"
        android:layout_marginTop="@dimen/spacing_standard_new"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xlarge"
            android:textStyle="bold"

            android:text="Connect With Friends"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium"
            android:layout_marginTop="8dp"
            android:text="Connect With Friends Connect With nnect With Friends Connect With Friends Connect With Friends Connect With Friends"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/scrll"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_below="@+id/textMain"
        android:layout_marginHorizontal="@dimen/spacing_standard_new"
        android:layout_marginBottom="@dimen/font_size_xxlarge"
        android:layout_height="wrap_content"



        >

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="70dp"

            android:layout_height="70dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/arrow_right"
        android:scaleType="center"

            android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:elevation="8dp"/>



    </RelativeLayout>
</RelativeLayout>