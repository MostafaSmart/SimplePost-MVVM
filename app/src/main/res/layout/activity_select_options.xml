<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59AC6E"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_standard_new"
    android:paddingHorizontal="@dimen/spacing_standard_new"
    tools:context=".views.activtys.SelectOptionsActivity">

  <LinearLayout
      android:id="@+id/hedar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentStart="true"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/arrow_back"

   />

    <TextView
        android:id="@+id/title_text"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalize your experience"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"

       />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="You can customize your feed by following topics or people that interest you the most"
        android:textColor="@color/white"


       />

  </LinearLayout>


  <!-- عنصر Flow لترتيب الChips -->
  <com.google.android.material.chip.ChipGroup
      android:id="@+id/chip_flow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_below="@+id/hedar"

      android:layout_marginTop="@dimen/spacing_large"


      >
    <com.google.android.material.chip.Chip
        android:id="@+id/chip1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News and Events"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:clickable="true"
        android:checkable="true"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/white"

        android:backgroundTint="@color/chip_background"
        app:checkedIconVisible="false"
        app:chipCornerRadius="16dp"
        android:textColor="@color/white"
       />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"

        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:clickable="true"
        android:checkable="true"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/white"

        android:backgroundTint="@color/chip_background"
        app:checkedIconVisible="false"
        app:chipCornerRadius="16dp"
        android:textColor="@color/white"



        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Development"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:clickable="true"
        android:checkable="true"
        app:chipStrokeWidth="1dp"
        app:chipStrokeColor="@color/white"

        android:backgroundTint="@color/chip_background"
        app:checkedIconVisible="false"
        app:chipCornerRadius="16dp"
        android:textColor="@color/white"

        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:clickable="true"
        android:checkable="true"
